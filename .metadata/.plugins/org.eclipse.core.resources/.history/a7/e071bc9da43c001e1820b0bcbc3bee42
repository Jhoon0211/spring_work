package aop_p.classes;

import org.springframework.stereotype.Component;

@Component
public class AdultStudent {
	
	public int as1(int kor, int eng, int tot, int avg1) {
		// 리턴 값
		tot = kor+eng;
		avg1 = tot/2;
		System.out.println("국어 점수 : " + kor + " | 영어 점수 : " + eng + 
				" | 총점 : " + tot + " | 평균 : " + avg1);
		return avg1;
	}
	
	public int as2(int kor, int eng, int tot, int avg2) {
		// 리턴 값
		tot = kor+eng;
		avg2 = tot/2;
		System.out.println("국어 점수 : " + kor + " | 영어 점수 : " + eng + 
				" | 총점 : " + tot + " | 평균 : " + avg2);
		return avg2;
	}
	
	public int as3(int kor, int eng, int tot, int avg3) {
		// 리턴 값
		tot = kor+eng;
		avg3 = tot/2;
		System.out.println("국어 점수 : " + kor + " | 영어 점수 : " + eng + 
				" | 총점 : " + tot + " | 평균 : " + avg3);
		return avg3;
	}
	
	public int asavg(int avg1, int avg2, int avg3, int totalavg) {
		avg1 + avg2+ avg3 = totalavg;
		return avg3;
		
	}
}
