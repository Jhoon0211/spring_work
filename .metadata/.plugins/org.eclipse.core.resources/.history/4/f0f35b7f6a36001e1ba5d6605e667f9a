package di_p;

import java.util.Arrays;

public class Exam {
	String name;
	Korea kor;
	English eng;
	Math mat;
	//Total tot;
	//Average avg;
	
	// 학생 점수 배열
	int [] arr, arr1, arr2;
	// 총점, 평균
	int tot, avg;

	public int[] getArr() {
		return arr;
	}

	public void setArr(int[] arr) {
		this.arr = arr;
	}
	
	public int getTot() {
		return tot;
	}

	public void setTot(int tot) {
		this.tot = tot;
	}

	public int getAvg() {
		return avg;
	}

	public void setAvg(int avg) {
		this.avg = avg;
	}

	// 생성자 선언
	public Exam(String name, Korea kor, English eng, Math mat) {
		super();
		this.name = name;
		this.kor = kor;
		this.eng = eng;
		this.mat = mat;
	}

	@Override
	public String toString() {
		return "Exam [name=" + name + ", kor=" + kor + ", eng=" + eng + ", mat=" + mat + ", arr=" + Arrays.toString(arr)
				+ ", tot=" + tot + ", avg=" + avg + "]";
	}	

}

class Korea{
	String name;
	int scr;
	
	public void setName(String name) {
		this.name = name;
	}
	public void setScr(int scr) {
		this.scr = scr;
	}
	
	@Override
	public String toString() {
		return "Korea [name=" + name + ", scr=" + scr + "]";
	}

}

class English{
	String name;
	int scr;
	
	public void setName(String name) {
		this.name = name;
	}
	public void setScr(int scr) {
		this.scr = scr;
	}
	
	@Override
	public String toString() {
		return "English [name=" + name + ", scr=" + scr + "]";
	}

	
}

class Math{
	String name;
	int scr;
	
	public void setName(String name) {
		this.name = name;
	}
	public void setScr(int scr) {
		this.scr = scr;
	}
	
	@Override
	public String toString() {
		return "Math [name=" + name + ", scr=" + scr + "]";
	}
	
}