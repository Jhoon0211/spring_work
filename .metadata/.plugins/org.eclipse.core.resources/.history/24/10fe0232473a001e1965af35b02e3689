package anno_p.com;

import org.springframework.stereotype.Component;

@Component
public class CafeMenu {
	String name;
	Americano americano;
	Cafelatte cafelatte;
	Caramel caramel;
	
	@Override
	public String toString() {
		return "CafeMenu [name=" + name + ", americano=" + americano + ", cafelatte=" + cafelatte + ", caramel="
				+ caramel + "]";
	}
		
}

@Component("ame")
class Americano{
	String name="아메리카노";
	int coffeebean=300, water=200, price=3500;
		
}

@Component("latte")
class Cafelatte{
	String nam="카페라떼";
	int coffeebean=250, milk=250, price=4000;
	
}

@Component("maki")
class Caramel{
	String name;
	int coffeebean=220, syrup=35, milk=230, price=5000;
	
}

