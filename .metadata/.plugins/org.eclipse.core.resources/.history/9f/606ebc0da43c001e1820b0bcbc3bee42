package aop_p.classes;

import org.springframework.stereotype.Component;

@Component
public class AdultStudent {
	
	public int as1(int kor, int eng, int tot, int avg) {
		// 리턴 값
		tot = kor+eng;
		avg = tot/2;
		System.out.println("국어 점수 : " + kor + "영어 점수 : " + eng + 
				"총점 : " + tot + "평균 : " + avg);
		return avg;
	}
	
	public int as2(int kor, int eng, int tot, int avg) {
		// 리턴 값
		tot = kor+eng;
		avg = tot/2;
		System.out.println("국어 점수 : " + kor + "영어 점수 : " + eng + 
				"총점 : " + tot + "평균 : " + avg);
		return avg;
	}
	
	public int as3(int kor, int eng, int tot, int avg) {
		// 리턴 값
		tot = kor+eng;
		avg = tot/2;
		System.out.println("국어 점수 : " + kor + "영어 점수 : " + eng + 
				"총점 : " + tot + "평균 : " + avg);
		return avg;
	}
}
