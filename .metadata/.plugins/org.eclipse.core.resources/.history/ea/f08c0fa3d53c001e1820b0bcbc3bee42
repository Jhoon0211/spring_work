package aop_p.classes;

import java.util.ArrayList;
import java.util.Iterator;

import org.springframework.stereotype.Component;

@Component
public class Order {
	
	ArrayList<Integer> list = new ArrayList<>();
	
	public int soup(String name, int price){
		this.list.add(price);
		return price;
	}
	
	public int dubrice(String name, int price){
		this.list.add(price);
		return price;
	}
	
	public int orderCount() {
		int totalprice = 0;
		for (int avg : list) {
			totalprice += avg;
		}
		return totalprice;
	}
		
