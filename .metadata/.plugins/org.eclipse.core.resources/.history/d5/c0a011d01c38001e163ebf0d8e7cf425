package anno_p;

import org.springframework.beans.factory.annotation.Autowired;

public class Coffee {
	@Autowired
	String name;
	int price;
	Shot shot;
	
	@Autowired(required=false)
	Syrup syrup;
	Milk milk;
	Chocolate chocolate;
	
	public void setName(String name) {
		this.name = name;
	}
	public void setPrice(int price) {
		this.price = price;
	}
	public void setShot(Shot shot) {
		this.shot = shot;
	}
	public void setSyrup(Syrup syrup) {
		this.syrup = syrup;
	}
	public void setMilk(Milk milk) {
		this.milk = milk;
	}
	public void setChocolate(Chocolate chocolate) {
		this.chocolate = chocolate;
	}

	
}

class Shot{
	String name;
	int times;
	
	public void setName(String name) {
		this.name = name;
	}
	public void setTimes(int times) {
		this.times = times;
	}
	
	
}


class Syrup{
	String name;
	int times;
	
	public void setName(String name) {
		this.name = name;
	}
	public void setTimes(int times) {
		this.times = times;
	}
	
	
}

class Milk{
	String name;
	int liter;
	
	public void setName(String name) {
		this.name = name;
	}
	public void setLiter(int liter) {
		this.liter = liter;
	}
	
	
}

class Chocolate{
	String name;
	int gram;
	
	public void setName(String name) {
		this.name = name;
	}
	public void setGram(int gram) {
		this.gram = gram;
	}
	
	
}
