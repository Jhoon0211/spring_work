package di_p;

import java.util.Arrays;

public class Exam {
	String name;
	Korea kor;
	English eng;
	Math mat;
	//Total tot;
	//Average avg;
	
	// 학생 점수 배열
	int [] arr, arr1, arr2, arr3;
	// 총점, 평균
	int tot, avg;

	public void setName(String name) {
		this.name = name;
	}

	public void setKor(Korea kor) {
		this.kor = kor;
	}

	public void setEng(English eng) {
		this.eng = eng;
	}

	public void setMat(Math mat) {
		this.mat = mat;
	}

	public void setArr1(int[] arr1) {
		this.arr1 = arr1;
	}

	public void setArr2(int[] arr2) {
		this.arr2 = arr2;
	}

	public void setArr3(int[] arr3) {
		this.arr3 = arr3;
	}

	public int[] getArr() {
		return arr;
	}

	public void setArr(int[] arr) {
		this.arr = arr;
	}
	
	public int getTot() {
		return tot;
	}

	public void setTot(int tot) {
		this.tot = tot;
	}

	public int getAvg() {
		return avg;
	}

	public void setAvg(int avg) {
		this.avg = avg;
	}

	// 생성자 선언
	public Exam(String name, Korea kor, English eng, Math mat) {
		super();
		this.name = name;
		this.kor = kor;
		this.eng = eng;
		this.mat = mat;
	}

	@Override
	public String toString() {
		return "Exam [name=" + name + ", kor=" + kor + ", eng=" + eng + ", mat=" + mat + ", arr=" + Arrays.toString(arr)
				+ ", arr1=" + Arrays.toString(arr1) + ", arr2=" + Arrays.toString(arr2) + ", arr3="
				+ Arrays.toString(arr3) + ", tot=" + tot + ", avg=" + avg + "]";
	}

}

class Korea{
	String name;
	int [] korScr;
	
	public void setName(String name) {
		this.name = name;
	}
	public void setScr(int[] korScr) {
		this.korScr = korScr;
	}
	
	@Override
	public String toString() {
		return "Korea [name=" + name + ", korScr=" + korScr + "]";
	}

}

class English{
	String name;
	int [] engScr;
	
	public void setName(String name) {
		this.name = name;
	}
	
	public void setEng(int[] engScr) {
		this.engScr = engScr;
	}

	
	@Override
	public String toString() {
		return "English [name=" + name + ", engScr=" + engScr + "]";
	}

	
}

class Math{
	String name;
	int [] mathScr;
	
	public void setName(String name) {
		this.name = name;
	}
	public void setScr(int[] mathScr) {
		this.mathScr = mathScr;
	}
	
	@Override
	public String toString() {
		return "Math [name=" + name + ", mathScr=" + mathScr + "]";
	}
	
}