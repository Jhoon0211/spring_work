<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://www.springframework.org/schema/beans"
xmlns:p="http://www.springframework.org/schema/p"
xsi:schemaLocation="http://www.springframework.org/schema/beans
https://www.springframework.org/schema/beans/spring-beans-4.3.xsd">
	
	<!-- 속성 대입 -->
	<bean class="di_p.AutoCar" name="car1" p:name="소나타" p:handle-ref="hhdd1">
		<property name="eng">
			<bean class="di_p.AutoEngine" p:name="병렬4기통" p:power="400" />		
		</property>
	</bean>
	
	<!-- 받는 곳 -->	
	<!-- autowire 속성 사용시 자동으로 알아서 다 들어옴 , name 직접 추가 -->
	<bean class="di_p.AutoCar" name="car2" autowire="byType" 
	p:name="말도타" p:handle-ref="hhdd1"/>
	
	<!-- byName : bean에서 지정한 이름과 handle에서 지정한 set값이 일치하지 않으면 갖고오지 않음 -->
	<bean class="di_p.AutoCar" name="car3" autowire="byName" 
	p:name="개만타" p:handle-ref="handle"/>		
	
	
	<!-- 생성자 실행 조건이 모두 충족할 경우 매개변수가 많은 생성자로 생성 -->
	<!-- 매개변수 할당 우선 순위 -->
	<!-- byType > byName	--> 
	<!-- constructor : byType으로 들어간 것 handle은 byName으로 들어감 -->
	<!-- 혼용해서 씀 -->
	<bean class="di_p.AutoCar" name="car4" autowire="constructor" 
	p:name="야타" p:handle-ref="handle"/>		
	
	<!-- 속성 추가 -->
	<!--<bean class="di_p.클래스명" name="이름설정" p:name="변수값설정" p:type="변수값설정"/>-->
	<!-- type이 두개면 문제가 생김,  autowire 지정하는 곳에서 name을 지정해주어야 함 -->
	<bean class="di_p.AutoHandle" name="hhdd1" p:name="핸들1" p:type="승용차용"/>	
	<bean class="di_p.AutoHandle" name="handle" p:name="핸들2" p:type="경주용"/>
	
		
	<bean class="di_p.AutoEngine" name="eg1" p:name="V4기통" p:power="500" />
	
	<!-- 휠 삽입 -->
	<bean class="di_p.AutoWheel" name="wh1" p:name="크롬휠" p:size="21" />
	<bean class="di_p.AutoWheel" name="wh2" p:name="고무휠" p:size="21" />
	<bean class="di_p.AutoWheel" name="wh3" p:name="자전거휠" p:size="21" />
	<bean class="di_p.AutoWheel" name="wh4" p:name="탱크휠" p:size="21" />
	
	<!-- byName 사용 법 : 웬만해서는 사용하지 않음 -->
	<!-- 클래스에서 set설정 값이 같아야 함 (set이름 안 맞춰준 버전) -->
	<bean class="java.util.ArrayList" name="whs">
		<constructor-arg>
			<list>
				<ref bean="wh2" />
				<ref bean="wh4" />
			</list>
		</constructor-arg>
	</bean>
	
	<!-- 클래스에서 set설정 값이 같아야 함 (set이름 맞춰준 버전) -->
	<bean class="java.util.ArrayList" name="whsqwer">
		<constructor-arg>
			<list>
				<ref bean="wh1" /> <!-- 크롬휠 -->
				<ref bean="wh3" /> <!-- 자전거휠 -->
			</list>
		</constructor-arg>
	</bean>
</beans>
